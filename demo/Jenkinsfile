pipeline {
    agent any

    tools {
        jdk 'jdk17'
        maven 'Maven 3.9.0'
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'ðŸ” Checking out the code...'
                checkout scm
            }
        }

        stage('Build') {
            steps {
                echo 'ðŸ”¨ Building with Maven...'
                sh 'mvn clean package -DskipTests'
            }
        }

        stage('Test') {
            steps {
                echo 'ðŸ§ª Running tests...'
                sh 'mvn test'
            }
        }

        stage('Deploy') {
            steps {
                echo 'ðŸš€ Starting Spring Boot application...'
                sh 'nohup java -jar target/*.jar > app.log 2>&1 &'
            }
        }
    }
}
